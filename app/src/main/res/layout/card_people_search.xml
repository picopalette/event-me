<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="2dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/card_people_search_imageView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:paddingLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_people_search_nameView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:minHeight="32dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/card_people_search_emailView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            android:textSize="12sp"
            />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_people_search_addBtn"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_height="match_parent"
        app:cardCornerRadius="6dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            app:cardCornerRadius="6dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/people_add_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_person_add_blue_24dp"
                android:layout_gravity="center"/>

        </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>
</LinearLayout>